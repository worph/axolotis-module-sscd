{
  "compilerOptions": {
    "experimentalDecorators": true,//needed for inversify
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noLib": false,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "test/*",
    "examples/*"
  ]
}
